<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign talks = data[1] | sort: 'sortDate' | reverse %}
  {% for content in talks %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.date %}
            {% assign date_display = content.date %}
          {% elsif content.sortDate %}
            {% assign date_display = content.sortDate | replace: '-', '.' %}
          {% else %}
            {% assign date_display = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ date_display }}
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url %}
              <a href="{{ content.url }}">{{ content.name }}</a>
            {% else %}
              {{ content.name }}
            {% endif %}
          </h6>
          {% if content.location %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem;">{{ content.location }}</h6>
          {% endif %}
          {% if content.type %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic;">
              {{ content.type }}
            </h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
